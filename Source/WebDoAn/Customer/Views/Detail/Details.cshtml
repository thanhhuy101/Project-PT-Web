    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table class="table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th>Tên Món ăn</th>
                                    <th></th>
                                    <th>Giá</th>
                                    <th></th>
                                    <th>Số lượng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="~/images/@Model.HinhAnh" alt="" style="width:150px;height:100px">
                                    </td>
                                    <td class="shoping__cart__item">
                                    </td>
                                    <td class="shoping__cart__item">
                                        <h4>@Model.TenSp</h4>
                                    </td>
                                    <td class="shoping__cart__item">
                                    </td>
                                    <td class="shoping__cart__price">
                                        @Model.GiaSp <span>VNĐ</span>
                                    </td>
                                    <td class="shoping__cart__item">
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        @using (Html.BeginForm("AddToCart","Cart", FormMethod.Post)){
						                    @Html.HiddenFor(m=>m.MaSp)
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    @Html.TextBox("SoLuong", "1")
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary" style="width:160px;height:40px">Thêm vào giỏ hàng</button>
					                    }
                                    </td>
                                </tr>
                            </tbody>
                        </table>  
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="shoping__checkout">
                        <h2 style="text-align:center">Mô tả</h2>
                        <br>
                        <ul>
                            <li><p style="color:#000;font-size:20px">@Model.MoTa</p></li>
                        </ul>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </section>
    <br>
    <!-- Js Plugins -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
